{
  "name": "rc-lang",
  "displayName": "Rc-lang",
  "description": "Rc-lang language server",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"onLanguage:plaintext",
    "onDebugResolve:plaintext"
	],
  "main": "./out/extension.js",
  "contributes": {
		"configuration": {
			"type": "Rclang",
			"title": "Rclang configuration",
			"properties": {
        "rclang.LSPVersion": {
            "type": "string",
            "default": "0.0.1",
            "markdownDescription": "The version of Rclang LSP"
        },
        "rclang.enableFullFeature": {
          "type": "boolean",
          "default": true
        },
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
    "configurationDefaults": {
      "[rc-lang]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "menus": {
      "file/newFile": [
        {
          "command": "rclang.newFile"
        }
      ],
      "editor/title": [
        {
          "command": "rclang.rcc",
          "group": "navigation"
        },
        {
          "command": "rclang.run",
          "group": "navigation"
        },
        {
          "command": "rclang.analysis",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "rclang.rcc",
        "title": "rclang build",
        "icon": "$(github)",
        "category": "rclang"
      },
      {
        "command": "rclang.run",
        "title": "rclang run",
        "icon": "$(twitter)",
        "category": "rclang"
      },
      {
        "command": "rclang.analysis",
        "title": "rclang analysis",
        "icon": "$(star)",
        "category": "rclang"
      },
      {
        "command": "rclang.newFile",
        "title": "create a new rc file",
        "category": "rclang"
      }
    ],
    "debuggers": [
      {
        "type": "rc-lang",
        "label": "rc-lang Debugger",
        "languages": [
          "rc-lang"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "mainClass": {
                "type": "string",
                "description": "Name of the main class to run"
              },
              "testClass": {
                "type": "string",
                "description": "Name of the test class to run"
              },
              "buildTarget": {
                "type": "string",
                "description": "Name of the build target of the class to run, can be found in the projects section of the Metals tab"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments passed to the class to run",
                "default": []
              },
              "jvmOptions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "env": {
                "type": "object",
                "items": {
                  "type": "string"
                },
                "default": {}
              },
              "envFile": {
                "type": "string",
                "description": "Name of a .env file with additional environment variables",
                "default": null
              }
            }
          },
          "attach": {
            "properties": {
              "buildTarget": {
                "type": "string",
                "description": "Name of the build target to debug"
              },
              "hostName": {
                "type": "string",
                "description": "Host name of the debuggee JVM"
              },
              "port": {
                "type": "number",
                "description": "Port to attach to"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Rc-lang: Run main class",
            "description": "A new configuration for running a debug session of a main class",
            "body": {
              "type": "rc-lang",
              "request": "launch",
              "name": "Untitled",
              "mainClass": "???",
              "args": [],
              "jvmOptions": [],
              "env": {}
            }
          },
          {
            "label": "Rc-lang: Run test class",
            "description": "A new configuration for running a debug session of a test class",
            "body": {
              "type": "rc-lang",
              "request": "launch",
              "name": "Untitled",
              "testClass": "???"
            }
          },
          {
            "label": "Rc-lang: Attach debugger",
            "description": "A new configuration for running a debug session of a remote JVM",
            "body": {
              "type": "rc-lang",
              "request": "attach",
              "name": "Untitled",
              "buildTarget": "???",
              "hostName": "localhost",
              "port": 5005
            }
          },
          {
            "label": "Rc-lang: Play framework prod server",
            "description": "A new configuration for running a production Play framework production server",
            "body": {
              "type": "rc-lang",
              "request": "launch",
              "name": "Play main",
              "mainClass": "play.core.server.ProdServerStart",
              "args": [],
              "jvmOptions": [],
              "buildTarget": "???"
            }
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rclang-sidebar-explorer",
          "title": "new Title",
          "icon": "icons/book.svg"
        }
      ],
      "panel": [
        {
          "id": "rclang-panel-explorer",
          "title": "Rclang Panel Explorer",
          "icon": "$(twitter)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rclangpackages",
        "contents": "No rclang project found. Create a new one or start Metals manually.\n[New Rclang Project](command:rclang.new-rclang-project)\n[Start Rclang](command:rclang.start-server)",
        "when": "!metals:enabled || workbenchState != empty"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "rclangViews",
          "name": "Views Test",
          "contextualTitle": "Explorer Package Explorer"
        }
      ],
      "rclang-sidebar-explorer": [
        {
          "id": "rclangpackages",
          "name": "packages"
        },
        {
          "id": "build-commands",
          "name": "Build Commands"
        },
        {
          "id": "help-and-feed-back",
          "name": "Help And Feedback"
        }
      ],
      "rclang-panel-explorer": [
        {
          "id": "rclangPanelExplorer",
          "name": "Rc Panel Explorer"
        }
      ]
    }
	},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0",
    "vscode-languageclient": "^8.1.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0"  }
}
